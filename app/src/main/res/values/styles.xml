<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">#F4E13B</item>
    </style>

    <style name="calculateButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/buttonStartColor</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Text">
        <item name="android:textColor">#370D81</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textResult">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="textResultBMI">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="textResultMessage">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="spinner">
        <item name="android:spinnerMode">dropdown</item>

        <item name="android:textAlignment">center</item>

    </style>

</resources>