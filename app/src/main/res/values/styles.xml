<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textTitle">
        <item name="android:text">@string/mainTitle</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">#F4E13B</item>
    </style>


    <style name="border">
        <item name="android:background">@drawable/border</item>
    </style>


    <style name="border2">
        <item name="android:background">@drawable/border2</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="calculateButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/startButtonColor</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Text">
        <item name="android:textColor">#370D81</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textResult">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="textResultBMI">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="textResultMessage">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">70sp</item>
    </style>

</resources>